{
  "kind": "collectionType",
  "collectionName": "programs",
  "info": {
    "singularName": "program",
    "pluralName": "programs",
    "displayName": "Program",
    "description": "Training and development programs"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titleAr": {
      "type": "string",
      "required": true
    },
    "titleEn": {
      "type": "string",
      "required": true
    },
    "descriptionAr": {
      "type": "richtext",
      "required": true
    },
    "descriptionEn": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["educational", "leadership", "specialized"],
      "required": true
    },
    "duration": {
      "type": "integer",
      "required": true
    },
    "durationType": {
      "type": "enumeration",
      "enum": ["hours", "days", "weeks", "months"],
      "default": "hours"
    },
    "level": {
      "type": "enumeration",
      "enum": ["beginner", "intermediate", "advanced", "expert"],
      "default": "beginner"
    },
    "instructorAr": {
      "type": "string"
    },
    "instructorEn": {
      "type": "string"
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "participants": {
      "type": "integer",
      "default": 0
    },
    "partnerAr": {
      "type": "string"
    },
    "partnerEn": {
      "type": "string"
    },
    "featuresAr": {
      "type": "json"
    },
    "featuresEn": {
      "type": "json"
    },
    "targetAudienceAr": {
      "type": "string"
    },
    "targetAudienceEn": {
      "type": "string"
    },
    "prerequisitesAr": {
      "type": "text"
    },
    "prerequisitesEn": {
      "type": "text"
    },
    "certification": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "inactive", "coming_soon"],
      "default": "active"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "launchDate": {
      "type": "date"
    },
    "isFree": {
      "type": "boolean",
      "default": true
    },
    "isCertified": {
      "type": "boolean",
      "default": false
    }
  }
}